<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fyp.protech360">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.VerificationActivity"
            android:label="ProTech360"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Homepage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.TrackroomDetails"
            android:label="@string/title_activity_trackroom_details"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.AddReminder"
            android:label="AddReminder"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.AddScheduledProfile"
            android:label="AddScheduledProfile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver android:name=".services.TimeBasedReminderReceiver">
            <intent-filter>
                <action android:name="android.action.action.TimeReminderbroadcast"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".services.TimeBasedProfileReceiver" >
            <intent-filter>
                <action android:name="android.action.action.TimeProfilebroadcast"/>
            </intent-filter>
        </receiver>
        <service android:name=".services.LocationService" />
        <service android:name=".services.LocationBasedProfileService" />
        <service android:name=".services.LocationBasedReminderService" />
        <service android:name=".services.SafetyRangeService" />
        <service android:name=".services.NotifyService" />

        <activity
            android:name=".ui.Activity_Connections"
            android:label="@string/title_activity__connections"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.AddMember_Room" />
    </application>

</manifest>